{
  "name": "codebook-md",
  "displayName": "Codebook MD",
  "description": "Execute notebook code-blocks directly in markdown docs! Supports Go, JavaScript, TypeScript, Shell - and more to come!",
  "icon": "extension/src/img/logo_2-1_128x128.png",
  "publisher": "josephbergevin",
  "repository": {
    "type": "git",
    "url": "https://github.com/josephbergevin/codebook-md.git"
  },
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Notebooks"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "codebook-md configuration",
      "properties": {
        "codebook-md.rootPath": {
          "description": "The root path of the workspace. This is used to resolve relative paths in code blocks.",
          "type": "string",
          "scope": "window"
        },
        "codebook-md.tempPath": {
          "description": "Path where temporary exec-related file(s) will be stored.",
          "type": "string",
          "scope": "window",
          "default": "/tmp"
        },
        "codebook-md.permalinkPrefix": {
          "description": "Prefix for identifying permalinks. When matched in a markdown, the permalink will be converted to a link to the same file/lines in VS Code.",
          "type": "string"
        },
        "codebook-md.deleteExecFileOnSuccess": {
          "description": "Delete the temporary exec file after a successful run.",
          "type": "boolean",
          "default": true
        },
        "codebook-md.go": {
          "type": "object",
          "properties": {
            "execType": {
              "type": "string",
              "default": "run",
              "enum": [
                "run",
                "test"
              ],
              "description": "Execution type for Go; 'run' will run using a 'main.go' using 'go run'; 'test' will run from a local '_test.go' file using 'go test'."
            },
            "execTypeRunFilename": {
              "type": "string",
              "default": "main.go",
              "description": "Filename to use for 'run' execution type."
            },
            "execTypeTestFilename": {
              "type": "string",
              "default": "codebook_md_exec_test.go",
              "description": "Filename to use for 'test' execution type."
            },
            "execTypeTestBuildTag": {
              "type": "string",
              "default": "playground",
              "description": "Build tag to use for 'test' execution type. This tag is added to the top of the test file to help ensure it doesn't run in normal test runs."
            },
            "goimportsCmd": {
              "type": "string",
              "default": "gopls imports",
              "enum": [
                "gopls imports",
                "goimports"
              ],
              "description": "'goimports' requires goimports to be installed. If null, 'gopls imports' will be used."
            }
          }
        },
        "codebook-md.bash": {
          "type": "object",
          "properties": {
            "execFilename": {
              "type": "string",
              "default": "codebook_md_exec.sh",
              "description": "Filename to use for 'run' execution type."
            }
          }
        },
        "codebook-md.js": {
          "type": "object",
          "properties": {
            "execFilename": {
              "type": "string",
              "default": "codebook_md_exec.js",
              "description": "Filename to use for 'run' execution type."
            }
          }
        },
        "codebook-md.ts": {
          "type": "object",
          "properties": {
            "execFilename": {
              "type": "string",
              "default": "codebook_md_exec.ts",
              "description": "Filename to use for 'run' execution type."
            }
          }
        }
      }
    },
    "commands": [],
    "languages": [
      {
        "id": "go",
        "aliases": [
          "Go"
        ],
        "extensions": [
          "go"
        ],
        "firstLine": "^package\\s.*"
      },
      {
        "id": "javascript",
        "aliases": [
          "JavaScript"
        ],
        "extensions": [
          "js"
        ],
        "firstLine": "^\\s*(import|export|const|let|var)\\s.*"
      },
      {
        "id": "typescript",
        "aliases": [
          "TypeScript"
        ],
        "extensions": [
          "ts"
        ],
        "firstLine": "^\\s*(import|export|const|let|var)\\s.*"
      },
      {
        "id": "rust",
        "aliases": [
          "Rust"
        ],
        "extensions": [
          "rs"
        ],
        "firstLine": "^\\s*(use|mod|pub|fn|struct|enum|impl|trait|type|const|let|static)\\s.*"
      },
      {
        "id": "python",
        "aliases": [
          "Python"
        ],
        "extensions": [
          "py"
        ],
        "firstLine": "^\\s*(import|from)\\s.*"
      },
      {
        "id": "shell",
        "aliases": [
          "Shell",
          "shell",
          "Bash",
          "bash",
          "sh",
          "zsh",
          "shellscript",
          "shell-script"
        ],
        "extensions": [
          "sh"
        ],
        "firstLine": "^#!.*\\b(bash|sh)\\b"
      },
      {
        "id": "http",
        "aliases": [
          "HTTP"
        ],
        "extensions": [
          "http"
        ],
        "firstLine": "(^|\\s)(GET|POST|PUT|DELETE)\\s.*"
      },
      {
        "id": "sql",
        "aliases": [
          "SQL"
        ],
        "extensions": [
          "sql"
        ],
        "firstLine": "(^|\\s)(SELECT|UPDATE)\\s.*"
      },
      {
        "id": "sh",
        "aliases": [
          "Shell"
        ],
        "extensions": [
          "sh"
        ],
        "firstLine": "^#!.*\\b(bash|sh)\\b"
      },
      {
        "id": "http",
        "aliases": [
          "HTTP"
        ],
        "extensions": [
          "http"
        ],
        "firstLine": "(^|\\s)(GET|POST|PUT|DELETE)\\s.*"
      },
      {
        "id": "markdown",
        "extensions": [
          ".md"
        ]
      }
    ],
    "notebooks": [
      {
        "type": "codebook-md",
        "displayName": "codebook-md",
        "priority": "default",
        "selector": [
          {
            "filenamePattern": "*.{md,markdown}"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test_garbage": "vscode-test",
    "test-md": "node ./runTest.js"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.10",
    "@types/eslint-scope": "^3.7.7",
    "@types/estree": "^1.0.5",
    "@types/istanbul-lib-coverage": "^2.0.6",
    "@types/json-schema": "^7.0.15",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "mocha": "^10.4.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vscode": "^1.1.37",
    "vscode-test": "^1.6.1",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "apigee": "0.0.1"
  }
}
