{
  "name": "codebook-md",
  "displayName": "Codebook MD - Run Notebook Code-Blocks",
  "description": "Execute notebook code-blocks directly in markdown docs! Supports Go, JavaScript, TypeScript, Bash, Python - and more to come!",
  "icon": "extension/src/img/logo_3_128x128.png",
  "publisher": "josephbergevin",
  "repository": {
    "type": "git",
    "url": "https://github.com/josephbergevin/codebook-md.git"
  },
  "license": "MIT",
  "keywords": [
    "notebook",
    "code-blocks",
    "code",
    "codebook",
    "markdown",
    "go",
    "golang",
    "javascript",
    "typescript",
    "shell",
    "sh",
    "zsh",
    "shellscript",
    "shell-script",
    "bash",
    "python",
    "http",
    "sql",
    "rust"
  ],
  "version": "0.10.3",
  "categories": [
    "Notebooks"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "codebook-md configuration",
      "properties": {
        "codebook-md.rootPath": {
          "description": "The root path of the workspace. This is used to resolve relative paths in code blocks.",
          "type": "string",
          "scope": "window"
        },
        "codebook-md.tempPath": {
          "description": "Path where temporary exec-related file(s) will be stored.",
          "type": "string",
          "scope": "window",
          "default": "/tmp"
        },
        "codebook-md.treeView": {
          "type": "object",
          "properties": {
            "folders": {
              "description": "Virtual folders to organize files in the tree view. Folders can be nested using the folders property.",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Display name for the folder"
                  },
                  "icon": {
                    "type": "string",
                    "description": "Path to a custom icon for the folder. If not provided, a default folder icon will be used."
                  },
                  "hide": {
                    "type": "boolean",
                    "description": "Whether to hide this folder in the tree view. Hidden folders are still part of the hierarchy but not shown in the UI."
                  },
                  "folders": {
                    "type": "array",
                    "description": "Sub-folders within this folder",
                    "items": {
                      "$ref": "#/contributes/configuration/properties/codebook-md.treeView/properties/folders/items"
                    }
                  },
                  "files": {
                    "type": "array",
                    "description": "Markdown files in this folder",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string",
                          "description": "Display name for the markdown file"
                        },
                        "path": {
                          "type": "string",
                          "description": "Path to the markdown file (absolute or relative to workspace root)"
                        }
                      },
                      "required": [
                        "name",
                        "path"
                      ]
                    }
                  }
                },
                "required": [
                  "name"
                ]
              }
            }
          },
          "default": {
            "folders": []
          }
        },
        "codebook-md.permalinkPrefix": {
          "description": "Prefix for identifying permalinks. When matched in a markdown, the permalink will be converted to a link to the same file/lines in VS Code.",
          "type": "string"
        },
        "codebook-md.deleteExecFileOnSuccess": {
          "description": "Delete the temporary exec file after a successful run.",
          "type": "boolean",
          "default": true
        },
        "codebook-md.output": {
          "type": "object",
          "properties": {
            "showExecutableCodeInOutput": {
              "type": "boolean",
              "default": true,
              "description": "Show the executable code at the top of the output (default: false)."
            },
            "showOutputOnRun": {
              "type": "boolean",
              "default": true,
              "description": "Show the output cell on run (default: true)."
            },
            "replaceOutputCell": {
              "type": "boolean",
              "default": true,
              "description": "Prepend the executable code to the output (default: true)."
            },
            "showTimestamp": {
              "type": "boolean",
              "default": true,
              "description": "Show the timestamp at the top of the output (default: true)."
            },
            "timestampTimezone": {
              "type": "string",
              "default": true,
              "description": "Timezone to use for the timestamp."
            }
          }
        },
        "codebook-md.go": {
          "type": "object",
          "properties": {
            "execTypeRunFilename": {
              "type": "string",
              "default": "main.go",
              "description": "Filename to use for 'run' execution type."
            },
            "execTypeTestBuildTag": {
              "type": "string",
              "default": "playground",
              "description": "Build tag to use for 'test' execution type. This tag is added to the top of the test file to help ensure it doesn't run in normal test runs."
            },
            "execTypeTestFilename": {
              "type": "string",
              "default": "codebook_md_exec_test.go",
              "description": "Filename to use for 'test' execution type."
            },
            "execType": {
              "type": "string",
              "default": "run",
              "enum": [
                "run",
                "test"
              ],
              "description": "Execution type for Go; 'run' will run using a 'main.go' using 'go run'; 'test' will run from a local '_test.go' file using 'go test'."
            },
            "goimportsCmd": {
              "type": "string",
              "default": "gopls imports",
              "enum": [
                "gopls imports",
                "goimports"
              ],
              "description": "'goimports' requires goimports to be installed. If null, 'gopls imports' will be used."
            },
            "output": {
              "type": "object",
              "properties": {
                "showExecutableCodeInOutput": {
                  "type": "boolean",
                  "default": true,
                  "description": "Show the executable code at the top of the output (default: false)."
                },
                "showOutputOnRun": {
                  "type": "boolean",
                  "default": true,
                  "description": "Show the output cell on run (default: true)."
                },
                "replaceOutputCell": {
                  "type": "boolean",
                  "default": true,
                  "description": "Prepend the executable code to the output (default: true)."
                },
                "showTimestamp": {
                  "type": "boolean",
                  "default": true,
                  "description": "Show the timestamp at the top of the output (default: true)."
                },
                "timestampTimezone": {
                  "type": "string",
                  "default": true,
                  "description": "Timezone to use for the timestamp."
                }
              }
            }
          }
        },
        "codebook-md.bash": {
          "type": "object",
          "properties": {
            "execSingleLineAsCommand": {
              "type": "boolean",
              "default": false,
              "description": "If true, bash code-blocks that are a single line will be executed as a command - instead of a script."
            },
            "output": {
              "type": "object",
              "properties": {
                "showExecutableCodeInOutput": {
                  "type": "boolean",
                  "default": true,
                  "description": "Show the executable code at the top of the output (default: false)."
                },
                "showOutputOnRun": {
                  "type": "boolean",
                  "default": true,
                  "description": "Show the output cell on run (default: true)."
                },
                "replaceOutputCell": {
                  "type": "boolean",
                  "default": true,
                  "description": "Prepend the executable code to the output (default: true)."
                },
                "showTimestamp": {
                  "type": "boolean",
                  "default": true,
                  "description": "Show the timestamp at the top of the output (default: true)."
                },
                "timestampTimezone": {
                  "type": "string",
                  "default": true,
                  "description": "Timezone to use for the timestamp."
                }
              }
            }
          }
        },
        "codebook-md.javascript": {
          "type": "object",
          "properties": {
            "output": {
              "type": "object",
              "properties": {
                "showExecutableCodeInOutput": {
                  "type": "boolean",
                  "default": true,
                  "description": "Show the executable code at the top of the output (default: false)."
                },
                "showOutputOnRun": {
                  "type": "boolean",
                  "default": true,
                  "description": "Show the output cell on run (default: true)."
                },
                "replaceOutputCell": {
                  "type": "boolean",
                  "default": true,
                  "description": "Prepend the executable code to the output (default: true)."
                },
                "showTimestamp": {
                  "type": "boolean",
                  "default": true,
                  "description": "Show the timestamp at the top of the output (default: true)."
                },
                "timestampTimezone": {
                  "type": "string",
                  "default": true,
                  "description": "Timezone to use for the timestamp."
                }
              }
            }
          }
        },
        "codebook-md.typescript": {
          "type": "object",
          "properties": {
            "output": {
              "type": "object",
              "properties": {
                "showExecutableCodeInOutput": {
                  "type": "boolean",
                  "default": true,
                  "description": "Show the executable code at the top of the output (default: false)."
                },
                "showOutputOnRun": {
                  "type": "boolean",
                  "default": true,
                  "description": "Show the output cell on run (default: true)."
                },
                "replaceOutputCell": {
                  "type": "boolean",
                  "default": true,
                  "description": "Prepend the executable code to the output (default: true)."
                },
                "showTimestamp": {
                  "type": "boolean",
                  "default": true,
                  "description": "Show the timestamp at the top of the output (default: true)."
                },
                "timestampTimezone": {
                  "type": "string",
                  "default": true,
                  "description": "Timezone to use for the timestamp."
                }
              }
            }
          }
        },
        "codebook-md.sql": {
          "type": "object",
          "properties": {
            "execOptions": {
              "type": "array",
              "description": "Options to use for SQL connections."
            },
            "output": {
              "type": "object",
              "properties": {
                "showExecutableCodeInOutput": {
                  "type": "boolean",
                  "default": true,
                  "description": "Show the executable code at the top of the output (default: false)."
                },
                "showOutputOnRun": {
                  "type": "boolean",
                  "default": true,
                  "description": "Show the output cell on run (default: true)."
                },
                "replaceOutputCell": {
                  "type": "boolean",
                  "default": true,
                  "description": "Prepend the executable code to the output (default: true)."
                },
                "showTimestamp": {
                  "type": "boolean",
                  "default": true,
                  "description": "Show the timestamp at the top of the output (default: true)."
                },
                "timestampTimezone": {
                  "type": "string",
                  "default": true,
                  "description": "Timezone to use for the timestamp."
                }
              }
            }
          }
        },
        "codebook-md.python": {
          "type": "object",
          "properties": {
            "pythonCmd": {
              "type": "string",
              "default": "python3",
              "description": "Command to use for running Python code-blocks."
            },
            "output": {
              "type": "object",
              "properties": {
                "showExecutableCodeInOutput": {
                  "type": "boolean",
                  "default": true,
                  "description": "Show the executable code at the top of the output (default: false)."
                },
                "showOutputOnRun": {
                  "type": "boolean",
                  "default": true,
                  "description": "Show the output cell on run (default: true)."
                },
                "replaceOutputCell": {
                  "type": "boolean",
                  "default": true,
                  "description": "Prepend the executable code to the output (default: true)."
                },
                "showTimestamp": {
                  "type": "boolean",
                  "default": true,
                  "description": "Show the timestamp at the top of the output (default: true)."
                },
                "timestampTimezone": {
                  "type": "string",
                  "default": true,
                  "description": "Timezone to use for the timestamp."
                }
              }
            }
          }
        }
      }
    },
    "commands": [
      {
        "command": "codebook-md.openFileAtLine",
        "title": "Codebook: Open File at Line"
      },
      {
        "command": "codebook-md.openMarkdownPreview",
        "title": "Codebook: Open Markdown Preview"
      },
      {
        "command": "codebook-md.go.open",
        "title": "Codebook: Execute Go"
      },
      {
        "command": "codebook-md.openMarkdownFile",
        "title": "Codebook: Open Markdown File"
      },
      {
        "command": "codebook-md.go",
        "title": "Codebook: Execute Go"
      },
      {
        "command": "codebook-md.addCurrentFileToFavorites",
        "title": "Codebook: Add Current File to Tree View"
      },
      {
        "command": "codebook-md.addFileToChosenFolder",
        "title": "Add File to Tree View",
        "icon": "$(add)"
      },
      {
        "command": "codebook-md.addFolderToTreeView",
        "title": "Add Virtual Folder to Tree View",
        "icon": "$(new-folder)"
      },
      {
        "command": "codebook-md.removeFromFavorites",
        "title": "Remove from Tree View"
      },
      {
        "command": "codebook-md.refreshTreeView",
        "title": "Refresh Tree View",
        "icon": "$(refresh)"
      },
      {
        "command": "codebook-md.renameTreeViewFile",
        "title": "Rename"
      },
      {
        "command": "codebook-md.addFileToFolder",
        "title": "Add md file to folder",
        "icon": "$(add)"
      },
      {
        "command": "codebook-md.addSubFolder",
        "title": "Add Sub-folder",
        "icon": "$(folder-add)"
      },
      {
        "command": "codebook-md.renameFolderDisplay",
        "title": "Rename Folder"
      },
      {
        "command": "codebook-md.removeFolderFromTreeView",
        "title": "Remove Folder",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "codebook-md.refreshTreeView",
          "when": "view == codebook-md-view",
          "group": "navigation"
        },
        {
          "command": "codebook-md.addFileToChosenFolder",
          "when": "view == codebook-md-view",
          "group": "navigation"
        },
        {
          "command": "codebook-md.addFolderToTreeView",
          "when": "view == codebook-md-view",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "codebook-md.removeFromFavorites",
          "when": "view == codebook-md-view && viewItem == markdownFile",
          "group": "1_modification"
        },
        {
          "command": "codebook-md.renameTreeViewFile",
          "when": "view == codebook-md-view && viewItem == markdownFile",
          "group": "1_modification"
        },
        {
          "command": "codebook-md.addFileToFolder",
          "when": "view == codebook-md-view && viewItem == folder",
          "group": "inline"
        },
        {
          "command": "codebook-md.addSubFolder",
          "when": "view == codebook-md-view && viewItem == folder",
          "group": "1_modification"
        },
        {
          "command": "codebook-md.renameFolderDisplay",
          "when": "view == codebook-md-view && viewItem == folder",
          "group": "1_modification"
        },
        {
          "command": "codebook-md.removeFolderFromTreeView",
          "when": "view == codebook-md-view && viewItem == folder",
          "group": "1_modification"
        }
      ],
      "editor/context": [
        {
          "command": "codebook-md.addCurrentFileToFavorites",
          "when": "resourceExtname == .md",
          "group": "codebook"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codebook-md-activitybar",
          "title": "Codebook MD",
          "icon": "extension/src/img/icon_logo_v1.svg"
        }
      ]
    },
    "views": {
      "codebook-md-activitybar": [
        {
          "id": "codebook-md-view",
          "name": "Codebook MD",
          "icon": "extension/src/img/icon_logo_v1.svg"
        },
        {
          "id": "codebook-md-notebooks-view",
          "name": "My Notebooks",
          "icon": "extension/src/img/icon_logo_v1.svg",
          "type": "webview"
        }
      ]
    },
    "languages": [
      {
        "id": "markdown",
        "extensions": [
          ".md",
          ".markdown"
        ]
      }
    ],
    "notebooks": [
      {
        "type": "codebook-md",
        "displayName": "codebook-md",
        "priority": "default",
        "selector": [
          {
            "filenamePattern": "*.{md,markdown}"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint-fix": "eslint src/**/*.ts --fix",
    "lint": "eslint src/**/*.ts",
    "test": "jest"
  },
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.9",
    "@types/vscode": "^1.88.0",
    "@types/vscode-notebook-renderer": "^1.72.3",
    "@types/webpack-env": "^1.18.5",
    "@vscode/test-electron": "^2.3.9",
    "chai": "^5.1.1",
    "eslint": "^8.56.0",
    "globals": "^15.8.0",
    "mocha": "^10.6.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.15.0",
    "vscode-test": "^1.6.1",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  },
  "engines": {
    "vscode": "^1.88.0"
  },
  "type": "commonjs"
}
